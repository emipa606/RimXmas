<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Class="RimXmas.ActiveXmasPodDef">
    <defName>ActiveXmasPod</defName>
    <label>drop pod</label>
    <category>Item</category>
    <thingClass>RimXmas.ActiveXmasPod</thingClass>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/XmasPod</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.9</drawSize>
      <shadowData>
        <volume>(0.8, 0.6, 0.8)</volume>
      </shadowData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <blockWind>true</blockWind>
    <useHitPoints>true</useHitPoints>
    <statBases>
      <MaxHitPoints>500</MaxHitPoints>
      <Flammability>0</Flammability>
    </statBases>
    <selectable>true</selectable>
    <!-- xmas -->
    <xmasContents>XmasPodInventory</xmasContents>
  </ThingDef>
</Defs>